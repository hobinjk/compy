{
  "version": "0.0.1",
  "name": "Compy",
  "description": "Log Viewer for Firefox OS",
  "launch_path": "/index.html",
  "developer": {
    "name": "James Hobin",
    "url": "https://github.com/hobinjk"
  },
  "activities": {
    "open": {
      "filters": {
        "type": ["text/plain"],
        "filename": {
          "pattern": "^[^.]*\\.log$"
        }
      },
      "href": "/index.html"
    }
  }
}
